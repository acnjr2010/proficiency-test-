<div class="form-group">
  <%= f.label :name, "Nome do Curso" %><br>
  <%= f.text_field :name, class: "form-control", placeholder: "Nome do curso sem abreviações" %>
</div>

<div class="form-group">
  <%= f.label :description, "Descrição do Curso" %><br>
  <%= f.text_field :description, class: "form-control", placeholder: "Descrição do curso" %>
</div>

<div class="form-group">
  <%= f.label :status, "Status" %>
  <%= f.select :status, [['Ativo', '1'], ['Inativo', '0']], { include_blank: true }, { class: "form-control"}  %>
</div>
<br>
<div class="form-group">
  <%= f.submit "Enviar", class: "btn btn-primary" %>
</div>
