<h2>Cursos Cadastrados</h2>
<table>
  <tr><td>Cursos</td><td>Descrição</td><td>Status</td></tr>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td>
          <% if course.status == 1 %>
            Ativo
          <% else %>
            Inativo
          <% end %>
        </td>
        <td>
          <%= link_to "Visualizar", course %> | <%= link_to "Editar", edit_course_path(course) %>
        </td>
      </tr>
    <% end %>
</table>

<br>
<%= link_to "Novo Curso", new_course_path %>
